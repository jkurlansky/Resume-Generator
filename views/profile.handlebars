<div class="container">
  <div class="row">
    <div class="col-6 mx-auto p-4 m-5 border-light shadow-sm">
      <h2>Welcome to your profile {{name}}!</h2>
      <div>
        <h3 class="mt-5 mb-4">Create a New Resume:</h3>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <button type="button" class="mt-3 btn btn-dark w-100 font-weight-bold mt-2" id="resume-form">Begin</button>
      </div>
      
    </div>
  </div>
</div>



 {{#if resume-list.length}}
  <div class="col-md-6 resume-list">
    <h3>Your Resumes</h3>

    {{#each resume-list as |Resume|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{Resume.id}}">{{Resume.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{Resume}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <script src="./js/profile.js"></script>